.line
  position: relative;
  display: block;
  height: 100%;
  overflow: hidden;

.line__container
  height: 100%;

.line__sport,
.line__main,
.line__coupon
  position relative;
  padding: 0 ($padding/2);
  float: left;
  height: 100%;
  min-height: 100px;

.line__sport
  width: 173px;

.line__main
  width: 788px;
  padding: 0;

.line__coupon
  width: 310px;

.line__additional.row
  height: $elementHeigth;
  margin: 0;

.line__separator
  height: $gapHeight;

.line__filters,
.line__filter-events
  float: left;
  height: $elementHeigth;
  line-height: $elementHeigth;
  border-radius: 5px;

.line__filters
  width: 467px;
  background: black;
  padding: 0 7.5px;

.line__filter-events
  width: 175px;
  margin: 0 0 0 5px;
  background: #300d37;