@import 'nib'
@import 'variables'

global-reset()
normalize-css()

*,
*:before, *:after
  box-sizing border-box

html, body
  height: 100%;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

body
  font-family: Arial, "Helvetica Neue", Helvetica, "Lucida Grande", sans-serif;
  font-size: 14px;
  line-height: 1.428571429;
  color: #dce0e2;
  background-color: #141415;
  font-smoothing(antialiased);

.container
  width:1271px;
  height: 100%;

  margin-right: auto;
  margin-left: auto;

  padding-left: ($padding / 2);
  padding-right: ($padding / 2);

  background: #4d5156;

  clearfix();

.app
  width: 100%;
  height: 100%;

.app__container
  height: 100%;

@import "blocks/*"
@import "components/*"
